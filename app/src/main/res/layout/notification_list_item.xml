<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DP7"
        android:layout_marginTop="@dimen/DP15"
        android:layout_marginRight="@dimen/DP7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                card_view:cardBackgroundColor="@android:color/transparent"
                card_view:cardCornerRadius="@dimen/DP0"
                card_view:cardElevation="0dp"
                card_view:cardMaxElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DP200">

                        <ProgressBar
                            style="@android:style/Widget.ProgressBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:indeterminateTint="@color/colorWhite" />

                        <ImageView
                            android:id="@+id/thumbnail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY" />

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/rl_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_top"
                android:layout_marginTop="@dimen/DP0">

                <TextView
                    android:id="@+id/txt_notification_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0"
                    android:lineSpacingExtra="@dimen/DP4"
                    android:maxLines="2"
                    android:minLines="1"
                    android:paddingTop="@dimen/DP5"
                    android:paddingRight="@dimen/DP10"
                    android:paddingBottom="@dimen/DP10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/SP16" />

                <TextView
                    android:id="@+id/txt_notification_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_notification_title"
                    android:letterSpacing="0"
                    android:paddingRight="@dimen/DP10"
                    android:paddingBottom="@dimen/DP10"
                    android:text="today"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/SP14" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DP2"
                android:layout_below="@+id/rl_options"
                android:layout_marginTop="@dimen/DP5"
                android:background="@drawable/blue_gradient"
                android:paddingBottom="@dimen/DP16" />


        </RelativeLayout>

        <View
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.80"
            android:background="@color/colorBlack"
            android:visibility="gone" />

    </RelativeLayout>


</layout>