<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
    android:id="@+id/bottom_view_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/DP4"
    android:paddingTop="@dimen/DP4"
    android:weightSum="0.4">

    <LinearLayout
        android:id="@+id/terminal_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/terminal_bottom_img"
            android:layout_width="@dimen/DP30"
            android:layout_height="@dimen/DP30"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_today_home"
            android:gravity="center" />

        <TextView
            android:id="@+id/terminal_bottom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/DP4"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/terminal"
            android:textSize="@dimen/margin_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/parent_message"
            android:layout_width="@dimen/DP45"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/message_bottom_img"
                android:layout_width="@dimen/DP30"
                android:layout_height="@dimen/DP30"
                app:srcCompat="@drawable/ic_discover"
                android:layout_centerInParent="true"/>
            
        </RelativeLayout>

        <TextView
            android:id="@+id/message_bottom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/DP2"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/message"
            android:textSize="@dimen/margin_13" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_place_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_place_bottom_img"
            android:layout_width="@dimen/DP45"
            android:layout_height="@dimen/DP30"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_create_new"
            android:gravity="bottom" />

        <TextView
            android:id="@+id/my_place_bottom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/DP4"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/my_place"
            android:textSize="@dimen/margin_13" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_bottom_img"
            android:layout_width="@dimen/DP30"
            android:layout_height="@dimen/DP30"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_profile"
            android:gravity="center" />

        <TextView
            android:id="@+id/search_bottom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/DP4"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="@string/search"
            android:textSize="@dimen/margin_13" />

    </LinearLayout>
    </LinearLayout>
</layout>