<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:padding="@dimen/DP25">

        <RelativeLayout
            android:id="@+id/ln_media_control"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP70"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/imgPrevious"
                android:layout_width="@dimen/DP45"
                android:layout_height="@dimen/DP45"
                android:layout_alignBottom="@+id/icon"
                android:layout_marginBottom="@dimen/DP10"
                android:padding="@dimen/DP10"
                android:src="@drawable/btn_previous" />

            <RelativeLayout
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/DP10"
                    android:src="@drawable/btn_pause"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgPause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/DP10"
                    android:src="@drawable/btn_play" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/imgForward"
                android:layout_width="@dimen/DP45"
                android:layout_height="@dimen/DP45"
                android:layout_alignBottom="@+id/icon"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/DP10"
                android:padding="@dimen/DP10"
                android:src="@drawable/btn_next_player" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ln_seekview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layoutDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text=""
                    android:textSize="@dimen/SP17"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:id="@+id/totalDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="@dimen/SP17"
                    android:textColor="@color/colorWhite"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mute"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/DP30"
                    android:layout_marginTop="@dimen/DP15"
                    android:layout_marginBottom="@dimen/DP15"
                    android:src="@drawable/icon_mute"
                    app:tint="@color/colorWhite"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/unmute"
                    android:layout_width="@dimen/DP45"
                    android:layout_height="@dimen/DP45"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="@dimen/DP30"
                    android:layout_marginTop="@dimen/DP15"
                    android:layout_marginBottom="@dimen/DP15"
                    android:src="@drawable/btn_mute_off"
                    app:tint="@color/colorWhite" />

            </RelativeLayout>


            <FrameLayout
                android:id="@+id/ln_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutVolume"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/DP15"
                    android:backgroundTint="@color/colorWhite"
                    android:progressBackgroundTint="@color/colorWhite"/>

            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>