<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
    android:id="@+id/adSelectParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_13"
    android:layout_marginRight="@dimen/margin_13"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DP110"
        android:background="@drawable/gradientbox"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutViewAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/marketChatLogoImage"
                android:layout_width="@dimen/DP45"
                android:layout_height="@dimen/DP45"
                android:layout_centerInParent="true"
                android:background="@drawable/marketchatlogo"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/viewImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/relativeLayout"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:layout_alignRight="@+id/relativeLayout"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:id="@+id/relativeLayout">

                <ImageView
                    android:id="@+id/deleteAd"
                    android:layout_width="@dimen/DP35"
                    android:layout_height="@dimen/DP35"
                    android:layout_margin="@dimen/DP4"
                    android:padding="@dimen/DP4"
                    app:srcCompat="@drawable/delete_icon" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutUploadAd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/plusAd"
                android:layout_width="@dimen/DP45"
                android:layout_height="@dimen/DP45"
                android:layout_marginTop="@dimen/DP15"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/image_plus" />

            <TextView
                android:text="@string/upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/plusAd"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/SP14"
                android:layout_marginTop="@dimen/DP8"/>

        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</layout>